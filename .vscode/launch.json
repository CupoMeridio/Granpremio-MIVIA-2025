{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch TORCS Client",
            "request": "launch",
            "mainClass": "it.unisa.javaclienttorcs.Client",
            "projectName": "JavaClientTorcs",
            "cwd": "${workspaceFolder}/JavaClientTorcs",
            "args": [
                "it.unisa.javaclienttorcs.SimpleDriver",
                "host:localhost",
                "port:3001"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "Launch Human Controller",
            "request": "launch",
            "mainClass": "it.unisa.javaclienttorcs.Client",
            "projectName": "JavaClientTorcs",
            "cwd": "${workspaceFolder}/JavaClientTorcs",
            "args": [
                "it.unisa.javaclienttorcs.HumanController",
                "host:localhost",
                "port:3001",
                "--collect"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "Launch KNN Driver",
            "request": "launch",
            "mainClass": "it.unisa.javaclienttorcs.Client",
            "projectName": "JavaClientTorcs",
            "cwd": "${workspaceFolder}/JavaClientTorcs",
            "args": [
                "it.unisa.javaclienttorcs.KNNDriver",
                "host:localhost",
                "port:3001"
            ],
            "console": "integratedTerminal"
        }
    ]
}